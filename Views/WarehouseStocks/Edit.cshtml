@model CarManufactoring.Models.WarehouseStock

@{
    ViewData["Title"] = "Edit Warehouse Stock";
}

<h1>@ViewBag.Title</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WarehouseStockId" />
            <div class="mt-2 mb-2">
                <label asp-for="Identification" class="control-label"></label>
                <select asp-for="Identification" class="form-control" >
                    <option>Warehouse nº 1</option>
                    <option>Warehouse nº 2</option>
                    <option>Warehouse nº 3</option>
                    <option>Warehouse nº 4</option>
                </select>
                <span asp-validation-for="Identification" class="text-danger"></span>
            </div>
            <div class="mt-2 mb-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
