@model IEnumerable<CarManufactoring.Models.MachineModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success mt-3">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MachineModelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MachineBrandNames)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MachineModelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MachineBrandNames.MachineBrandName)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.MachineModelId" class="btn btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.MachineModelId" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.MachineModelId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
