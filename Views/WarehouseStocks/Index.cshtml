@model IEnumerable<CarManufactoring.Models.WarehouseStock>

@{
    ViewData["Title"] = "Warehouse Stock List";
}

<h1>@ViewBag.Title</h1>

<p class="mt-4">
    <a asp-action="Create" class="btn btn-success">Create New</a>
    <a asp-controller="stocks" asp-action="Index" class="btn btn-secondary">Stock</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => new WarehouseStock().Identification)
            </th>
            <th>
                @Html.DisplayNameFor(model => new Material().Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => new Stock().Quantity)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (Stock item in ViewBag.Stock) {
        <tr>
            <td>
                @item.WarehouseStock.Identification
            </td>
            <td>
                @item.Material.Nome
            </td>
            <td>
                @item.Quantity
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.WarehouseStockId" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.WarehouseStockId" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.WarehouseStockId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
