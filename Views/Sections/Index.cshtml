@model IEnumerable<CarManufactoring.Models.Section>

@{
    ViewData["Title"] = "Section List";
}

<h2>@ViewBag.Title</h2>

<p>
    <a asp-action="Create" class="btn btn-success mt-3">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.SectionId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.SectionId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.SectionId" class="btn btn-danger">Delete</a>
        </tr>
}
    </tbody>
</table>
