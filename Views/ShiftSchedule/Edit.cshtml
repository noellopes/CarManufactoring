@model CarManufactoring.Models.ShiftSchedule

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Shift Schedules</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ShiftSchedulesId" />
            <div class="form-group">
                <label asp-for="CollaboratorId" class="control-label"></label>
                <select asp-for="CollaboratorId" class="form-control form-select" asp-items="ViewBag.CollaboratorId"></select>
                <span asp-validation-for="CollaboratorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}