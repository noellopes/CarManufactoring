@model CarManufactoring.Models.MachineModel

@{
    ViewData["Title"] = "Edit Machine Model";
}

<h2>@ViewBag.title</h2>

<h4>MachineModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MachineModelId" />
            <div class="form-group">
                <label asp-for="MachineModelName" class="control-label"></label>
                <input asp-for="MachineModelName" class="form-control" />
                <span asp-validation-for="MachineModelName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MachineBrandId" class="control-label"></label>
                <select asp-for="MachineBrandId" class="form-control" asp-items="ViewBag.MachineBrandId"></select>
                <span asp-validation-for="MachineBrandId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

