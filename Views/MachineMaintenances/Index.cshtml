@model IEnumerable<CarManufactoring.Models.MachineMaintenance>

@{
    ViewData["Title"] = "Gestão de Máquina na Linha de Produção";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>@ViewData["Title"]</h1>
            <hr />
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-6">
            <a class="btn " asp-action="Create"><i class="fa-sharp fa-solid fa-plus pe-2"></i>Criar</a>
        </div>
        <div class="col-6">
            <form asp-action="Index" method="get">
                <div class="mb-3">
                    <label for="brand" class="form-label">Brand</label>
                    <input name="brand" class="form-control" type="search" value="" />
                </div>

                <input type="submit" value="Search" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn btn-secondary">Clear Search</a>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h2>Trabalhos em aberto</h2>

        </div>
    </div>
</div>
