@model IEnumerable<CarManufactoring.Models.InspectionAndTesting>

@{
    ViewData["Title"] = "Inspection And Testing";
}

<h1>@ViewBag.Title</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InspectionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.InspectionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.InspectionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
