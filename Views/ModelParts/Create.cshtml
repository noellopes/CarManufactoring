@model CarManufactoring.Models.ModelParts

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ModelParts</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label">Peça</label>
                <select asp-for="ProductId" class ="form-control" asp-items="ViewBag.ProductId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CarConfigId" class="control-label">Configuração</label>
                <select asp-for="CarConfigId" class ="form-control" asp-items="ViewBag.CarConfigId"></select>
            </div>
            <div class="form-group">
                <label asp-for="QtdPecas" class="control-label">Quantidade de peças</label>
                <input asp-for="QtdPecas" class="form-control" value="" min="1" />
                <span asp-validation-for="QtdPecas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
