@using CarManufactoring.ViewModels.Group1;
@model MachineMaintenaceIndexViewModel

@{
    ViewData["Title"] = "Gestão de Máquina na Linha de Produção";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>@ViewData["Title"]</h1>
            <hr />
        </div>
    </div>
    <div class="row py-4">
        <div class="col-4">
            <a class="btn" asp-action="Create"><i class="fa-sharp fa-solid fa-plus pe-2"></i>Criar</a>
            <div>
                <canvas id="myChart"></canvas>
            </div>
        </div>
        <div class="col-8">
            <h3>Trabalhos em aberto</h3>           
            <hr />
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.OnProgress.First().MachineMaintenanceId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OnProgress.First().Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OnProgress.First().BeginDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OnProgress.First().ExpectedEndDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OnProgress.First().TaskTypeId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OnProgress.First().PriorityId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OnProgress.First().MachineId)
                        </th>
                       
                    </tr>
                </thead>
                <tbody >
                    
                    @foreach (var machineMaintenace in Model.OnProgress)
                    {
                       
                            <tr class="text-decoration-none ">
                            <td scope="col">
                                <a class="text-decoration-none text-black" asp-action="Details" asp-route-id="@machineMaintenace.MachineMaintenanceId">
                                        @machineMaintenace.MachineMaintenanceId
                                    </a>
                                </td>
                                <td scope="col">
                                <a class="text-decoration-none text-black" asp-action="Details" asp-route-id="@machineMaintenace.MachineMaintenanceId">
                                        @machineMaintenace.Description
                                    </a>
                                </td>
                                    
                                <td scope="col">
                                <a class="text-decoration-none text-black" asp-action="Details" asp-route-id="@machineMaintenace.MachineMaintenanceId">
                                        @machineMaintenace.BeginDate.ToShortDateString()
                                    </a>
                                </td>
                            <td scope="col">
                                <a class="text-decoration-none text-black" asp-action="Details" asp-route-id="@machineMaintenace.MachineMaintenanceId">
                                        @machineMaintenace.ExpectedEndDate.ToShortDateString()
                                    </a>
                                </td>
                            <td scope="col">
                                <a class="text-decoration-none text-black" asp-action="Details" asp-route-id="@machineMaintenace.MachineMaintenanceId">
                                        @machineMaintenace.TaskType.TaskName
                                    </a>
                                </td>
                            <td scope="col">
                                    <a class="text-decoration-none text-black" asp-action="Details" asp-route-id="@machineMaintenace.MachineMaintenanceId">
                                        @machineMaintenace.Priority.Name
                                    </a>
                                </td>
                                <td scope="col">
                                <a class="text-decoration-none text-black" asp-action="Details" asp-route-id="@machineMaintenace.MachineMaintenanceId">
                                        @machineMaintenace.Machine.MachineModel.MachineBrandNames.MachineBrandName - @machineMaintenace.Machine.MachineModel.MachineModelName
                                    </a>    
                                </td> 
                                 <td scope="col">
                                    <a class="text-decoration-none text-black" asp-action="Edit" asp-route-id="@machineMaintenace.MachineMaintenanceId">
                                        <i class="fa-regular fa-pen-to-square"></i>
                                    </a>
                                    <a class="text-decoration-none text-black" asp-action="Delete" asp-route-id="@machineMaintenace.MachineMaintenanceId">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </a>
                                </td>
                        </tr>  
                       
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <form asp-action="Index" method="get">
                <div class="mb-3">
                    <label for="brand" class="form-label">Brand</label>
                    <input name="brand" class="form-control" type="search" value="" />
                </div>

                <input type="submit" value="Search" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn btn-secondary">Clear Search</a>
            </form>
        </div>
    </div>
    <div class="row py-4">
        <div class="col-12">
            <h3>Todos os Trabalhos</h3>
            <hr />
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.All.First().MachineMaintenanceId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.All.First().Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.All.First().BeginDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.All.First().ExpectedEndDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.All.First().EffectiveEndDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.All.First().TaskTypeId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.All.First().PriorityId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.All.First().MachineId)
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var machineMaintenace in Model.All)
                    {
                        <tr>
                            
                            <td>
                               @machineMaintenace.MachineMaintenanceId
                            </td>

                            <td>@machineMaintenace.Description</td>
                            <td>@machineMaintenace.BeginDate.ToShortDateString()</td>
                            <td>@machineMaintenace.ExpectedEndDate.ToShortDateString()</td>
                            <td>@machineMaintenace.EffectiveEndDate?.Date.ToShortDateString()</td>
                            <td>@machineMaintenace.TaskType.TaskName</td>
                            <td>@machineMaintenace.Priority.Name</td>
                            <td>@machineMaintenace.Machine.MachineModel.MachineBrandNames.MachineBrandName - @machineMaintenace.Machine.MachineModel.MachineModelName </td>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>



<script>
    const ctx = document.getElementById('myChart');

    new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: ['Abertas', 'Fechadas'],
            datasets: [{
                label: 'Estado das Manutenções',
                data: [@Model.All.Count(), @Model.OnProgress.Count()],
                backgroundColor: [
                'rgb(255, 99, 132)',
                'rgb(54, 162, 235)'
                ],
            hoverOffset: 4
            }]
        },
       
    });
</script>
