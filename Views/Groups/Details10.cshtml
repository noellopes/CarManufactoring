@using CarManufactoring.ViewModels.Group1;
@using CarManufactoring.ViewModels.Group3;
@model IEnumerable<Documents>

@{
    ViewData["Title"] = "Group 3";
}

<style>
    img{
        padding-left: 10px;
    }
</style>


<h1>
    <a asp-controller="Students" asp-action="Details" asp-route-number="1707785"><img align="right" class="img" src="~/img/students/1700331.jpg" width="10%" height="10%"></a>
    <a asp-controller="Students" asp-action="Details" asp-route-number="1707785"> <img align="right" class="img" src="~/img/students/1701480.jpg" width="10%" height="10%" ></a>
</h1>
<h2> Osman Can Ofraz,Mahmut Aran</h2>
<p>(Click photo for personal details and documentation)</p>

<hr>

<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Format</th>
                <th scope="col">Document</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Documents d in Model)
            {
                <tr>
                    <td scope="col">
                        <img class="img-fluid pdf-img" src="/documents/grupo1/img/pdf_logo.png">
                    </td>
                    <td scope="col">@d.Name</td>
                    <td>
                        <a href="@d.DocPath" target="_blank">
                            <img class="img-fluid" src="/documents/grupo1/img/download.png">
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

