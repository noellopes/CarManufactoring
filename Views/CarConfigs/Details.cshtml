@model CarManufactoring.Models.CarConfig

@{
    ViewData["Title"] = "Details";
}

<h1>@ViewBag.Title</h1>

<div>
    <hr />
   @if (ViewBag.SuccessMessage != null)
    {
        <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
            <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
            </symbol>
        </svg>

        <div class="alert alert-success" role="alert">
            <h4 class="alert-heading">
                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Info:"><use xlink:href="#check-circle-fill" /></svg>
                Success
            </h4>

            <h6>
                @ViewBag.SuccessMessage
            </h6>
        </div>
    }
    <hr />
    @{
        await Html.RenderPartialAsync("_CarConfigDetails", Model);
    }

</div>
<div>
    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model?.CarConfigId">Edit</a>
 <a asp-action="Delete" asp-route-id="@Model?.CarConfigId" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
