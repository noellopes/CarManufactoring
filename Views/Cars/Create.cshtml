@model CarManufactoring.Models.Car

@{
    ViewData["Title"] = "Create";
}


<style>
    .butt {
        padding-top: 10px;
    }
</style>


<h1>@ViewBag.Title</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BrandId" class="control-label"></label>
                <select asp-for="BrandId" class ="form-control" asp-items="ViewBag.BrandId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CarModel" class="control-label"></label>
                <input asp-for="CarModel" class="form-control" />
                <span asp-validation-for="CarModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LaunchYear" class="control-label"></label>
                <input asp-for="LaunchYear" value ="@Model.LaunchYear" class="form-control" />
                <span asp-validation-for="LaunchYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BasePrice" class="control-label"></label>
                <input asp-for="BasePrice" class="form-control" />
                <span asp-validation-for="BasePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeProduction" class="control-label"></label>
                <input asp-for="TimeProduction" class="form-control" />
                <span asp-validation-for="TimeProduction" class="text-danger"></span>
            </div>
            <div class="form-group butt">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
