@{
    ViewData["Title"] = "Gestão de Máquina na Linha de Produção";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>@ViewData["Title"]</h1>
            <hr />
        </div>
    </div>
    <div class="row py-4">
        <div class="col-4">
            <a class="btn" asp-action="Create"><i class="fa-sharp fa-solid fa-plus pe-2"></i>Criar</a>
        </div>
        <div class="col-8">
            <h3>Trabalhos em aberto</h3>
            <hr />
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Finished.First().MachineMaintenanceId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Finished.First().MaintenanceMachine.TaskType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Finished.First().MaintenanceMachine.Machine.MachineModel)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Finished.First().MaintenanceMachine.Machine.MachineModel.MachineBrandNames)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Finished.First().MaintenanceMachine.Machine.LocalizationCodeId)
                        </th>
                       
                        <th>
                            @Html.DisplayNameFor(model => model.Finished.First().EffectiveEndDate)
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var machineMaintenace in Model.Finished)
                    {
                        <tr>
                            <th>@machineMaintenace.MachineMaintenanceId</th>
                            <th>@machineMaintenace.MaintenanceMachine.TaskType</th>
                            <th>@machineMaintenace.MaintenanceMachine.Machine.MachineModel</th>
                            <th>@machineMaintenace.MaintenanceMachine.Machine.MachineModel.MachineBrandNames</th>
                            <th>@machineMaintenace.MaintenanceMachine.Machine.MachineLocalizationCode.Column - @machineMaintenace.MaintenanceMachine.Machine.MachineLocalizationCode.Line</th>                            
                           
                            <th>@machineMaintenace.EffectiveEndDate</th>
                         

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
