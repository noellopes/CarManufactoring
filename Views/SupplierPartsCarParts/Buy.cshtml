@model CarManufactoring.Models.WarehouseProduct

@{
    ViewData["Title"] = "Buy Piece";
}

<h1>Buy</h1>

<div>
    <h4>Buy Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CarParts.ProductId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CarParts.ProductId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            Quantity to Buy
        </dt>
        <dd class = "col-sm-10">
            @{
                int ToBuy = Model.StockMax - Model.Quantity;
            }
            @ToBuy
            }
        </dd>
    </dl>
    

    <form asp-action="Buy">
        <input type="hidden" asp-for="@ToBuy"/>
        <input type="hidden" asp-for="ProductId"/>
        <input type="submit" value="Buy" class="btn btn-danger"/>
    </form>

</div>
