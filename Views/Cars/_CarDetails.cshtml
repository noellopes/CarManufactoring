@model Car

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Brand)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Brand.BrandName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.CarModel)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.CarModel)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.LaunchYear)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.LaunchYear)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.BasePrice)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.BasePrice)€
