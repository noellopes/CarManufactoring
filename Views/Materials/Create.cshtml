@model CarManufactoring.Models.Material

@{
    ViewData["Title"] = "Add new material";
}

<h1>@ViewBag.Title</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="form-text text-danger"></div>
            <div class="mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="form-text text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="form-text text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="State" class="control-label"></label>
                <textarea asp-for="State" class="form-control"></textarea>
                <span asp-validation-for="State" class="form-text text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Type" class="control-label"></label>
                <textarea asp-for="Type" class="form-control"></textarea>
                <span asp-validation-for="Type" class="form-text text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>

            </div>
        </form>
    </div>
</div>


</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
