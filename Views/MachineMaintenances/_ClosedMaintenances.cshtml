@using CarManufactoring.ViewModels.Group1;
@model MachineMaintenaceIndexViewModel
@{

}
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Closed.List.First().MachineMaintenanceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Closed.List.First().Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Closed.List.First().BeginDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Closed.List.First().ExpectedEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Closed.List.First().EffectiveEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Closed.List.First().TaskTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Closed.List.First().PriorityId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Closed.List.First().MachineId)
        </tr>
    </thead>
    <tbody>

        @foreach (MachineMaintenance machineMaintenace in Model.Closed.List)
        {
            
                <tr class="text-decoration-none ">
                <td scope="col">
                    <a class="text-decoration-none text-black" asp-action="Details" asp-route-id="@machineMaintenace.MachineMaintenanceId">
                        @machineMaintenace.MachineMaintenanceId
                    </a>
                </td>
                <td scope="col">
                    <a class="text-decoration-none text-black" asp-action="Details" asp-route-id="@machineMaintenace.MachineMaintenanceId">
                        @machineMaintenace.Description
                    </a>
                </td>
                <td scope="col">
                    <a class="text-decoration-none text-black" asp-action="Details" asp-route-id="@machineMaintenace.MachineMaintenanceId">
                        @machineMaintenace.BeginDate.ToShortDateString()
                    </a>
                </td>
                <td scope="col">
                    <a class="text-decoration-none text-black" asp-action="Details" asp-route-id="@machineMaintenace.MachineMaintenanceId">
                        @machineMaintenace.ExpectedEndDate.ToShortDateString()
                    </a>
                </td>
                <td scope="col">
                    <a class="text-decoration-none text-black" asp-action="Details" asp-route-id="@machineMaintenace.MachineMaintenanceId">
                        @machineMaintenace.EffectiveEndDate?.ToShortDateString()
                    </a>
                </td>
                <td scope="col">
                    <a class="text-decoration-none text-black" asp-action="Details" asp-route-id="@machineMaintenace.MachineMaintenanceId">
                        @machineMaintenace.TaskType.TaskName
                    </a>
                </td>
                <td scope="col">
                    <a class="text-decoration-none text-black" asp-action="Details" asp-route-id="@machineMaintenace.MachineMaintenanceId">
                        @machineMaintenace.Priority.Name
                    </a>
                </td>
                <td scope="col">
                    <a class="text-decoration-none text-black" asp-action="Details" asp-route-id="@machineMaintenace.MachineMaintenanceId">
                        @machineMaintenace.Machine.MachineModel.MachineBrandNames.MachineBrandName - @machineMaintenace.Machine.MachineModel.MachineModelName
                    </a>
                </td>
            </tr>
          
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(Model.Closed.PagingInfo.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-pageClosed="1">First</a>
        </li>

        @for (int p = Model.Closed.PagingInfo.InitialPageToShow; p <= Model.Closed.PagingInfo.FinalPageToShow; p++)
        {
            if (p == Model.Closed.PagingInfo.CurrentPage)
            {
                <li class="page-item active" aria-current="page"><a class="page-link" href="#">@p</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-pageClosed="@p">@p</a></li>
            }
        }

        <li class="page-item @(Model.Closed.PagingInfo.CurrentPage == Model.Closed.PagingInfo.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-pageClosed="@Model.Closed.PagingInfo.TotalPages">Last</a>
        </li>
    </ul>
</nav>