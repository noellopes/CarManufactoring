@model IEnumerable<CarManufactoring.Models.WorkMachineMaintenance>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaintenanceStateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkPriority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreviewStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Collaborator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SectionManager)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaintenanceTask)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkStates)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaintenanceStateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkPriority)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreviewStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Collaborator.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SectionManager.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaintenanceTask.TaskDef)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkStates.StateWork)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WorkMachineMaintenanceId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.WorkMachineMaintenanceId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.WorkMachineMaintenanceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
