@model CarManufactoring.Models.Material

@{
    ViewData["Title"] = "Edit Material";
}

<h1>@ViewBag.Title</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="form-text text-danger"></div>
            <input type="hidden" asp-for="MaterialId" />
            <div class="mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="form-text text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="form-text text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="State" class="form-label"></label>
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="form-text text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Type" class="form-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="form-text text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>

            </div>
        </form>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
