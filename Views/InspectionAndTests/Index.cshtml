@model IEnumerable<CarManufactoring.Models.InspectionAndTest>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Productions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityTested)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Collaborator)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Productions.ProductionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityTested)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Collaborator.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InspectionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.InspectionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.InspectionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
