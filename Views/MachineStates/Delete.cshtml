@model CarManufactoring.Models.MachineState

@{
    ViewData["Title"] = "Machine State";
}

<h1>@ViewBag.Title</h1>

<h4 class="mb-3">Are you sure you want to delete this MachineState?</h4>

@{
    await Html.RenderPartialAsync("_MachineStateDetails", Model);
}

    
<form asp-action="Delete">
    <input type="hidden" asp-for="MachineStateId" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>