@model IEnumerable<Group>

@{
    ViewData["Title"] = "Groups information";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Group</th>
            <th scope="col">Elements</th>
            <th scope="col">Work</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(Group g in Model){
            <tr>
                <td>@g.Number</td>
                <td>
                    
                </td>
                <td>@g.Work</td>
                <td>
                    <a asp-controller="Groups" asp-action="Grupo6details" asp-route-number="@g.Number" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
        
        
    </tbody>
</table>
