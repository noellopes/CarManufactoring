@model IEnumerable<Documents>
@{
    ViewData["Title"] = "Luis Barros";
}



<h1><img align="right" class="img" src="/img/students/1700331.jpg" width="100" height="100" \>@ViewData["Title"]</h1>
<h2>Group 3</h2>


<hr>

<h4> What I'm doing:</h4><p>Resizing photo, put the documentation in a group's specific folder </p>

<h4>What I'm going to do:</h4><p>Put information in my personal view </p>

<hr />

<div class="row">
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Format</th>
            <th scope="col">Document</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
            @foreach(Documents d in Model)
            {
                <tr>
                    <td scope="col">
                        <img class="img-fluid pdf-img" src="/documents/grupo1/img/pdf_logo.png">
                    </td>
                    <td scope="col">@d.Name</td>
                    <td>
                        <a href="@d.DocPath" target="_blank">
                            <img class="img-fluid" src="/documents/grupo1/img/download.png">
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

