@model CarManufactoring.Models.MachineBrand

@{
    ViewData["Title"] = "Edit Machine Brand";
}

<h2>@ViewBag.title</h2>

<h4>MachineBrand</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MachineBrandId" />
            <div class="form-group">
                <label asp-for="MachineBrandName" class="control-label"></label>
                <input asp-for="MachineBrandName" class="form-control" />
                <span asp-validation-for="MachineBrandName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}