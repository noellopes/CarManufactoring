@using CarManufactoring.ViewModels.Group1;
@model MachineMaintenaceIndexViewModel

@{
    ViewData["Title"] = "Gestão de Máquina na Linha de Produção";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>@ViewData["Title"]</h1>
            <hr />
        </div>
    </div>
    <div class="row py-4">
        <div class="col-4">
            <a class="btn" asp-action="Create"><i class="fa-sharp fa-solid fa-plus pe-2"></i>Criar</a>
        </div>
        <div class="col-8">
            <h3>Trabalhos em aberto</h3>           
            <hr />
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.OnProgress.First().MachineMaintenanceId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OnProgress.First().Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OnProgress.First().BeginDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OnProgress.First().Expected_End_Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OnProgress.First().TaskTypeId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OnProgress.First().PriorityId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OnProgress.First().MachineId)
                        </th>
                    </tr>
                </thead>
                <tbody >
                    
                    @foreach (var machineMaintenace in Model.OnProgress)
                    {
                        <tr>
                            <th>@machineMaintenace.MachineMaintenanceId</th>
                            <th>@machineMaintenace.Description</th>
                            <th>@machineMaintenace.BeginDate.ToShortDateString()</th>
                            <th>@machineMaintenace.Expected_End_Date.ToShortDateString()</th>
                            <th>@machineMaintenace.TaskType.TaskName</th>
                            <th>@machineMaintenace.Priority.Name</th>
                            <th>@machineMaintenace.Machine.MachineModel.MachineBrandNames.MachineBrandName - @machineMaintenace.Machine.MachineModel.MachineModelName </th>

                        </tr>   
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <form asp-action="Index" method="get">
                <div class="mb-3">
                    <label for="brand" class="form-label">Brand</label>
                    <input name="brand" class="form-control" type="search" value="" />
                </div>

                <input type="submit" value="Search" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn btn-secondary">Clear Search</a>
            </form>
        </div>
    </div>
    <div class="row py-4">
        <div class="col-12">
            <h3>Todos os Trabalhos</h3>
            <hr />
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.All.First().MachineMaintenanceId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.All.First().Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.All.First().BeginDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.All.First().Expected_End_Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.All.First().Effective_End_Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.All.First().TaskTypeId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.All.First().PriorityId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.All.First().MachineId)
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var machineMaintenace in Model.All)
                    {
                        <tr>
                            <th>@machineMaintenace.MachineMaintenanceId</th>
                            <th>@machineMaintenace.Description</th>
                            <th>@machineMaintenace.BeginDate.ToShortDateString()</th>
                            <th>@machineMaintenace.Expected_End_Date.ToShortDateString()</th>
                            <th>@machineMaintenace.Effective_End_Date?.Date.ToShortDateString()</th>
                            <th>@machineMaintenace.TaskType.TaskName</th>
                            <th>@machineMaintenace.Priority.Name</th>
                            <th>@machineMaintenace.Machine.MachineModel.MachineBrandNames.MachineBrandName - @machineMaintenace.Machine.MachineModel.MachineModelName </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
