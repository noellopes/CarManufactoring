@model IEnumerable<CarManufactoring.Models.ModelParts>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome da Peça
            </th>
            <th>
                Nome do modelo do carro
            </th>
            <th>
                Quantidade de peças
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CarParts.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarConfig.ConfigName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdPecas)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { item.CarConfigId, item.ProductId }) |
                    @Html.ActionLink("Details", "Details", new { item.CarConfigId, item.ProductId }) |
                    @Html.ActionLink("Delete", "Delete", new { item.CarConfigId, item.ProductId })
            </td>
        </tr>
}
    </tbody>
</table>
